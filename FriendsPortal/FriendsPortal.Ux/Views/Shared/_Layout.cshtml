<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        div {
            color: #FE6E4C;
            font-weight: bold;
            /*border-style: solid;
            border-color: black;
            border-width: 1px;*/
        }
    </style>
</head>
<body>
    <div class="navbar-inner">
        <div class="container-fluid">
            <div class="row-fluid">
                <div class="span1">
                    Home
                </div>
                <div class="span1">
                    About
                </div>
                <div class="span1">
                    Contact
                </div>
                <div class="span9">
                    <p class="navbar-text pull-right">Logged in as <a href="#">username</a></p>
                </div>
            </div>
            <!--/.nav-collapse -->
        </div>

    </div>

    <div class="container-fluid">
        @RenderBody()
    </div>

    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span3">
                <footer>
                    <p>© Company 2012</p>
                </footer>
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/knockout")
    <script src="~/Scripts/twitter-bootstrap/docs/assets/js/bootstrap-transition.js"></script>
    <script src="~/Scripts/twitter-bootstrap/docs/assets/js/bootstrap-alert.js"></script>
    <script src="~/Scripts/twitter-bootstrap/docs/assets/js/bootstrap-modal.js"></script>
    <script src="~/Scripts/twitter-bootstrap/docs/assets/js/bootstrap-dropdown.js"></script>
    <script src="~/Scripts/twitter-bootstrap/docs/assets/js/bootstrap-scrollspy.js"></script>
    <script src="~/Scripts/twitter-bootstrap/docs/assets/js/bootstrap-tab.js"></script>
    <script src="~/Scripts/twitter-bootstrap/docs/assets/js/bootstrap-tooltip.js"></script>
    <script src="~/Scripts/twitter-bootstrap/docs/assets/js/bootstrap-popover.js"></script>
    <script src="~/Scripts/twitter-bootstrap/docs/assets/js/bootstrap-button.js"></script>
    <script src="~/Scripts/twitter-bootstrap/docs/assets/js/bootstrap-collapse.js"></script>
    <script src="~/Scripts/twitter-bootstrap/docs/assets/js/bootstrap-carousel.js"></script>
    <script src="~/Scripts/twitter-bootstrap/docs/assets/js/bootstrap-typeahead.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>


